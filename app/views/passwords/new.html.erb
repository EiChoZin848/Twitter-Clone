<div class="section">
  <div class="container">
    <div class="columns is-centered">
      
     <div class="cloumn is-4" id="inputForm">
      <h2 class="title is-2" >Forgot your password</h2>

      <% simple_form_for resource_name, resource, :url => password_path(resource_name), :html => {:method => :post} do |f| %>
        <%= f.error_messages %>
    

        <div class="field">
	  	    <div class="control">
	          <%= f.input :email, :required => true, :autofocus => true, :input_html => { :class =>"input" }, :wrapper => false, :label_html => { :class =>"label" } %>
	  	    </div>
		    </div>

         
        <div class="field">
          <div class="control">
            <%= f.button :submit, "Send me reset password instructions", :class =>"button is-info" %>
          </div>
        </div>

      <% end %>

      <div class="link">
        <%= render :partial => "shared/devise_links" %>
      </div>
     </div>
    </div>
  </div>
</div>

