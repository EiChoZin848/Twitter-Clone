<div class="section">
  <div class="container">
    <div class="columns is-centered">
      
     <div class="cloumn is-4" id="inputForm">
      <h2 class="title is-2" >Change your password</h2>

      <% simple_form_for resource_name, resource, :url => password_path(resource_name), :html => { :method => :put } do |f| %>
        <%= f.error_messages %>

        <div class="field">
	  	    <div class="control">
	          <%= f.input :password,:autocomplete => "off", :hint => "leave blank if you don't want to change it",  :required => false, :input_html => { :class =>"input" }, :wrapper => false, :label_html => { :class =>"label" } %>
	  	    </div>
		    </div>

        <div class="field">
	  	    <div class="control">
	          <%= f.input :password_confirmation, :label => "New password", :required => true, :autofocus => true, :input_html => { :class =>"input" }, :wrapper => false, :label_html => { :class =>"label" } %>
	  	    </div>
		    </div>

        <div class="field">
	  	    <div class="control">
	          <%= f.input :current_password, :label => "Confirm your new password",  :required => true, :input_html => { :class =>"input" }, :wrapper => false, :label_html => { :class =>"label" } %>
	  	    </div>
		    </div>

        
        <div class="form-actions">

            <%= f.button :submit, "Change my password" %>

        </div>

      <% end %>

      <div class="link">
        <%= render :partial => "shared/devise_links" %>
      </div>
     </div>
    </div>
  </div>
</div>



