<% simple_form_for @tweet, :html => { :multipart => true } do |f| %>
    <%= f.error_messages %>
    <div class="field">
        <div class="control">
            <%= f.input :tweet, :label => "Tweeet about it", :input_html => { :class => "textarea", :placeholder => 'Compose a new tweeet...'}, :wrapper => false, :label_html => {:class => "label"},  :autofocus => true %>
        </div>
    </div>
    <%= f.button :submit, :class => "button is-info" %>
<% end %>