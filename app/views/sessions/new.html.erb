<div class="section">
  <div class="container">
    <div class="columns is-centered">
      
     <div class="cloumn is-4" id="inputForm">
      <h2 class="title is-2" >Sign in</h2>

      <% simple_form_for resource_name, resource, :url => session_path(resource_name) do |f| %>
        <%= f.error_messages %>
    

        <div class="field">
	  	    <div class="control">
	          <%= f.input :email, :required => true, :input_html => { :class =>"input" }, :wrapper => false, :label_html => { :class =>"label" } %>
	  	    </div>
		    </div>

        <div class="field">
	  	    <div class="control">
	          <%= f.input :password, :required => false, :input_html => { :class =>"input" }, :wrapper => false, :label_html => { :class =>"label" } %>
	  	    </div>
		    </div>

        <div class="field">
	  	    <div class="control">
            <% if devise_mapping.rememberable? -%>
	            <%= f.check_box :remember_me,    :wrapper => false %>
              <%= f.label :remember_me %>
            <% end -%>
          </div>
		    </div>
        
        <div class="field">
          <div class="control">
            <%= f.button :submit, "Sign in", :class =>"button is-info is-medium" %>
          </div>
        </div>

      <% end %>

      <div class="link">
        <%= render :partial => "shared/devise_links" %>
      </div>
     </div>
    </div>
  </div>
</div>
